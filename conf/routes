
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.HomeController.index
GET     /register                     controllers.HomeController.register
POST    /addUser                      controllers.HomeController.addUser
GET     /login                        controllers.HomeController.login
POST     /loginUser                   controllers.HomeController.loginUser


GET     /parsefile/:file              controllers.HomeController.parseFile(file: String)
POST    /addToDictionary              controllers.HomeController.addToDictionary
GET      /getUserDictionary              controllers.HomeController.getUserDictionary

GET      /uploadFileForm              controllers.HomeController.uploadFileForm
POST     /submitFileForm              controllers.HomeController.submitFileForm

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      